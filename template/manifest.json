{
	"name": "Bug Magnet",
	"description": "Right-click context menu to help with exploratory testing",
	"version": "1.0",
	"permissions": ["contextMenus", "storage"],
	"background": {
		"scripts": ["extension.js"]
	},
	"content_scripts": [{
		"matches" : ["<all_urls>"], 
		"js": ["content-script.js"],
		"run_at": "document_idle"
	}],
	"manifest_version": 2,
	"icons": {
		"128": "magnet.png",
		"16": "magnet-16.png"
	},
  "homepage_url": "https://gojko.github.io/bugmagnet",
  "author": "Gojko Adzic https://gojko.net",
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	}
}
