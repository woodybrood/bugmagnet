{
  "extends": "crockford",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "semi": ["error", "always"],
    "strict": ["error", "function"],
    "no-unused-vars": "error",
    "indent": ["error", "tab" ],
    "no-const-assign": "error",
    "one-var": "error",
    "prefer-const": "error",
    "no-var": "error",
    "no-plusplus": ["off"],
    "quotes": ["error", "single", {"avoidEscape": true, "allowTemplateLiterals": true}]
  }
}
